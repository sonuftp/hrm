{
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": ">=2.0.6",
        "yiisoft/yii2-bootstrap": "*",
        "yiisoft/yii2-swiftmailer": "*",
        "facebook/php-sdk-v4" : "^5.1",
        "yiisoft/yii2-authclient": "~2.0.0",
        "abraham/twitteroauth": "^0.6.2",
		"google/apiclient": "1.0.*@beta",
		"richweber/yii2-twitter": "dev-master",
		"nterms/yii2-pagesize-widget": "*",
		"yiisoft/yii2-jui": "*",
		"moonlandsoft/yii2-phpexcel": "*",
		"janisto/yii2-timepicker": "*",
		"kartik-v/yii2-widget-timepicker": "@dev",
		"johnitvn/yii2-ajaxcrud": "*",
		"kartik-v/yii2-grid": "@dev"
    },
    "require-dev": {
        "yiisoft/yii2-codeception": "*",
        "yiisoft/yii2-debug": "*",
        "yiisoft/yii2-gii": "*",
        "yiisoft/yii2-faker": "*"
    },
    "config": {
        "process-timeout": 1800
    },
    "extra": {
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    },
    "scripts": {
        "post-install-cmd": "php init --env=Development --overwrite=n"
    },
	"asset-installer-paths": {
        "bower-asset-library": "vendor/bower-assets"
    }
}
